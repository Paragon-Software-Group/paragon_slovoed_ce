<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_manager_ui_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_manager_ui_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_manager_ui_title_margin_top</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_manager_ui_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_manager_ui_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_manager_ui_preference_margin_top</item>
        <item name="switchMinWidth">@dimen/settings_manager_ui_switch_track_min_width</item>
    </style>

    <style name="SettingsSeekBar">
        <item name="android:layout_marginStart">@dimen/settings_manager_ui_seekbar_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_manager_ui_seekbar_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_manager_ui_vertical_margin</item>
    </style>

    <style name="SettingsDelimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_manager_ui_delimiter_height</item>
        <item name="android:layout_marginTop">@dimen/settings_manager_ui_delimiter_margin_top</item>
        <item name="android:background">@color/settings_manager_ui_delimiter_color</item>
    </style>
</resources>