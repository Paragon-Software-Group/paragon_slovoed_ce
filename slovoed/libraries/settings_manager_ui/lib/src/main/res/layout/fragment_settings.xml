<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settings_manager_ui_card_view_margin_bottom">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/settings_manager_ui_delimiter_margin_top"
                    android:orientation="vertical">

                <include layout="@layout/fragment_settings_behavior_section"/>

                <View style="@style/SettingsDelimiter"/>

                <include layout="@layout/fragment_settings_font_section"/>

                <View style="@style/SettingsDelimiter"/>

                <include layout="@layout/fragment_settings_privacy_section"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>
