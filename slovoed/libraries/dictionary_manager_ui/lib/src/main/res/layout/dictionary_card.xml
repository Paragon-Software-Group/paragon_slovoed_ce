<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPaddingLeft="@dimen/dictionary_card_left_padding"
            app:contentPaddingTop="@dimen/dictionary_card_top_padding"
            app:contentPaddingRight="@dimen/dictionary_card_right_padding"
            app:contentPaddingBottom="@dimen/dictionary_card_bottom_padding"
            android:layout_marginLeft="@dimen/dictionary_card_left_margin"
            android:layout_marginTop="@dimen/dictionary_card_top_margin"
            android:layout_marginRight="@dimen/dictionary_card_right_margin"
            android:layout_marginBottom="@dimen/dictionary_card_bottom_margin">

        <include
                layout="@layout/dictionary_info"/>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:id="@+id/dictionary_icon_image_view"
            android:layout_width="@dimen/dictionary_card_icon_size"
            android:layout_height="@dimen/dictionary_card_icon_size"
            style="@style/DictionaryCardImageStyle"
            android:layout_marginLeft="@dimen/dictionary_card_icon_left_margin"
            android:layout_marginTop="@dimen/dictionary_card_icon_top_margin"/>
</FrameLayout>

