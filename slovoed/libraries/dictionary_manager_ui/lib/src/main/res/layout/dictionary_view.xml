<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dictionary_view_horizontal_padding"
        android:paddingRight="@dimen/dictionary_view_horizontal_padding"
        android:paddingBottom="@dimen/dictionary_view_bottom_padding">

    <ImageView
            android:id="@+id/dictionary_icon_image_view"
            android:layout_width="@dimen/dictionary_view_icon_size"
            android:layout_height="@dimen/dictionary_view_icon_size"
            style="@style/DictionaryCardImageStyle"
            android:layout_marginTop="@dimen/dictionary_view_icon_vertical_margin"
            android:layout_marginBottom="@dimen/dictionary_view_icon_vertical_margin"
            android:layout_marginLeft="@dimen/dictionary_view_icon_left_margin"
            android:layout_marginRight="@dimen/dictionary_view_icon_right_margin"/>

    <include
            layout="@layout/dictionary_info"/>

</LinearLayout>

